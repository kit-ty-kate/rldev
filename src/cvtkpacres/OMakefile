PROGRAM = $(EXEDIR)/cvtkpacres

FILES []=
  app
  lexer
  convert
  main

OCAMLPACKS += str

GENERATED = lexer.ml
OCamlGeneratedFiles($(GENERATED))
OCamlProgram($(PROGRAM), $(FILES))

# Meta-rules:

.DEFAULT: all
.PHONY: all clean

all: $(PROGRAM)$(EXE)

clean:
  $(RM) *.omc $(GENERATED) $(addsuffixes .cmi .cmo .cmx $(EXT_OBJ),$(FILES))
